varnishtest "Test multiple rushing of waiting list when streaming"

server s1 {
	rxreq
	txresp -nolen -hdr "Transfer-encoding: chunked"
	chunked "<1>------------------------<1>\n"
	sema r1 sync 5
	chunkedlen 0
} -start

varnish v1 -arg "-p rush_exponent=2" -vcl+backend {
	sub vcl_fetch {
		set beresp.do_stream = true;
	}
} -start

client c1 {
	txreq -hdr "foo: /foo"
	rxresp -no_obj

	rxchunk
	expect resp.chunklen == 31
	sema r1 sync 5

	rxchunk
	expect resp.chunklen == 0
	expect resp.bodylen == 31
} -start

client c2 {
	txreq -hdr "foo: /foo"
	rxresp -no_obj

	rxchunk
	expect resp.chunklen == 31
	sema r1 sync 5

	rxchunk
	expect resp.chunklen == 0
	expect resp.bodylen == 31
} -start

client c3 {
	txreq -hdr "foo: /foo"
	rxresp -no_obj

	rxchunk
	expect resp.chunklen == 31
	sema r1 sync 5

	rxchunk
	expect resp.chunklen == 0
	expect resp.bodylen == 31
} -start

client c4 {
	txreq -hdr "foo: /foo"
	rxresp -no_obj

	rxchunk
	expect resp.chunklen == 31
	sema r1 sync 5

	rxchunk
	expect resp.chunklen == 0
	expect resp.bodylen == 31
} -start

client c1 -wait
client c2 -wait
client c3 -wait
client c4 -wait

varnish v1 -expect fetch_threaded == 1
varnish v1 -expect s_streamed == 4
